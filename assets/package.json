{
  "name": "ffw_theme",
  "version": "2.0.0",
  "repository": "https://github.com/ffwagency/ffw_theme",
  "license": "ISC",
  "description": "FFW theme with NPM as a build tool",
  "devDependencies": {
    "autoprefixer": "^9.1.5",
    "csscomb": "",
    "jshint": "",
    "kss": "",
    "node-sass": "^4.10.0",
    "nodemon": "^1.18.6",
    "susy": "^3.0.5",
    "watch": ""
  },
  "scripts": {
    "csscomb": "csscomb sass/*",
    "jshint": "jshint js/**.js",
    "build": "npm run build:js && npm run build:css",
    "build-kss": "kss --source \"sass/\" --css \"css/styles.css\" --destination \"ffw-styleguide\" --homepage \"ffw-styleguide.md\" --builder \"ffw-styleguide/ffw-template\" --title \"Style guide\"",
    "build-js": "npm run jshint",
    "build-css": "node-sass  -r sass/styles.scss -o css/ --output-style=compressed",
    "watch-css": "nodemon -e scss -x \"npm run build-css\" && \"npm run csscomb\"",
    "watch-js": "nodemon -e js -x \"npm run build-js\""
  },
  "dependencies": {

  }
}
