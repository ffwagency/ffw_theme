// Erwachsene product page
.page-produkte-erwachsene .produkt-erwachsene {

  [class*="visual"]::before {
    width: 25px;
    height: calc(25px * 0.7678);

    @include media(tablet) {
      width: 43px;
      height: calc(43px * 0.7678);
      transform: rotate(12deg);
    }

    @include media(desktop) {
      width: 56px;
      height: calc(56px * 0.7678);
      transform: rotate(16deg);
    }
  }

  > [class*="visual"] {
    right: 77px;
    top: -13px;
    z-index: 2;

    @include media(tablet) {
      display: block;
      top: -18px;
      right: 18%;
      bottom: auto;
      left: auto;
      z-index: 2;

      &::before {
        width: 43px;
        height: calc(43px * 0.7633);
        transform: rotate(-16deg);
      }
    }
  }

  .column-first {
    @include media(tablet) {
      margin-bottom: 6rem;
    }
    @include media(desktop) {
      margin-bottom: 8rem;
    }
    @include media(xl) {
      margin-bottom: 10rem;
    }
  }

  .infographic [class*="visual"] {
    display: none;

    @include media(tablet) {
      display: block;
      right: 35px;
      top: 70px;

      &::before {
        transform: rotate(12deg);
      }
    }

    @include media(desktop) {
      right: 45px;
      top: 190px;

      &::before {
        transform: rotate(16deg);
      }
    }

    @include media(xl) {
      top: 39px;
    }
  }
}

.produkt-erwachsene,
.produkt-schwangere {
  > .product-image {
    display: none;

    @include media(tablet) {
      display: block;
      top: 346px;
      right: 28px;
      width: 270px;
    }

    @include media(desktop) {
      top: 324px;
      right: 24px;
      width: 434px;
    }

    @include media(xl) {
      top: 304px;
      right: 20px;
      width: 495px;
    }
  }
}

// Expand/collapse product button
.expander {
  @extend %shadow-teal;
  max-width: $max-width-desktop;
  display: block;
  margin: 0 auto;
  // padding: 0.712rem 1rem;
  padding: 1.125rem 1rem;
  border-radius: $radius;
  font-size: 1rem;
  font-weight: $font-bold;
  line-height: 1;
  text-align: center;
  color: $color-white;
  cursor: pointer;
  background-color: $color-teal;
  transition: background-color $transition-time, color $transition-time;
  position: relative;
  z-index: 1;

  &::before {
    content: "Mehr anzeigen";
    display: inline-block;

    @include media(tablet) {
      line-height: 1.7;
      border-bottom: 2px solid $color-white;
    }
  }

  &:hover,
  &:active {
    @extend %shadow-teal-blue;
    background-color: $color-teal;
  }

  @include media(tablet) {
    width: auto;
    margin-right: -#{map-get($wrapper-space, "tablet")};
    margin-left: -#{map-get($wrapper-space, "tablet")};
    padding: 1.356rem 0;
    border-radius: 0;
    font-size: 1.125rem;
  }

  @include media(desktop) {
    margin: 0 auto;
    padding: 1.98rem 0;
  }

  .expanded + & {
    width: auto;
    max-width: $max-width-desktop;

    @include media-max(tablet) {
      margin-top: 20px;
    }

    // @include media(tablet) {
