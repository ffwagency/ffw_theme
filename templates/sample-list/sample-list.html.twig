{{ attach_library('ffw_theme/sample-list') }}

{# Include a component template outside of templates directory #}
{#% include "@ffw_theme_components/sample-list/sample-list.twig" %#}

<section class="sample-list">
  <h2 class="sample-list__heading">{{ heading }}</h2>
  {% for item in items %}
  <article class="sample-list__item">
    <h3>{{ item.title }}</h3>
    <p>{{ item.desc }}</p>
  </article>
  {% endfor %}
</section>
